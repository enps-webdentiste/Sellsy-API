{% embed 'Embed/box.html.twig' %}
	{% block title %}
		<i class="fa fa-list"></i>
		Liste des groupes
	{% endblock %}

	{% block boxContent %}
		<div class="form-filter">

			<div class="col-md-8"></div>
			<div class="col-md-4">
				{% import ':Macro:buttons.html.twig' as buttons %}
				<div class="pull-right">
					{{ buttons.create({
						url: path('fos_user_group_new')
					}) }}
				</div>
				
			</div>
		</div>

		<table id="example" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>Nom</th>
					<th></th>
				</tr>
			</thead>
			{% for group in groups %}
				<tr>
					<td>
						<a href="{{ path('fos_user_group_show', {'groupName': group.getName()} ) }}">{{ group.getName() }}</a>
					</td>
					<td>
					</td>
				</tr>
				
			{% endfor %}
		</table>
	{% endblock %}
{% endembed %}
