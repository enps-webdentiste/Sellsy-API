{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
    {#{ form_widget(form) }#}
	<div class="form-group  {% if form.plainPassword.first.vars.errors|length %}has-error {% endif %}">
		<div>
		{{ form_label(form.plainPassword.first) }} <span class="form-required" title="Ce champ est requis.">*</span> :
		</div>
		<div>
		{{ form_widget(form.plainPassword.first) }}
		<span class="form-required">{{ form_errors(form.plainPassword.first) }}</span>
		</div>
	</div>
	<div class="form-group {% if form.plainPassword.second.vars.errors|length %}has-error {% endif %}">
		<div>
		{{ form_label(form.plainPassword.second) }} <span class="form-required" title="Ce champ est requis.">*</span> :
		</div>
		<div>
		{{ form_widget(form.plainPassword.second) }}
		<span class="form-required">{{ form_errors(form.plainPassword.second) }}</span>
		</div>
	</div>
    <div class="form-group has-feedback">
        <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
{{ form_end(form) }}
